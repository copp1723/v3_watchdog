# Watchdog AI - Environment Configuration Example
# Copy this file to .env and update with your actual values
# DO NOT commit the actual .env file to version control

# ============================================================================
# Application Settings
# ============================================================================
SECRET_KEY=your-secret-key-here-at-least-32-chars-long
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG=true  # true or false
ALLOW_SIGNUP=false  # true or false
MAX_UPLOAD_SIZE_MB=10
DATA_RETENTION_DAYS=90

# ============================================================================
# OpenAI API Settings
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION_ID=  # Optional: your organization ID
OPENAI_MODEL=gpt-4  # Model to use for completions
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# ============================================================================
# Database Settings
# ============================================================================
DB_ENGINE=sqlite  # sqlite, postgresql
DB_DATABASE=watchdog_ai.db
# Only needed for PostgreSQL:
#DB_HOST=localhost
#DB_PORT=5432
#DB_USERNAME=watchdog
#DB_PASSWORD=your-db-password

# ============================================================================
# CRM Integration Settings
# ============================================================================
CRM_ENABLED=false  # true or false
CRM_PROVIDER=nova_act  # currently only nova_act is supported
CRM_SYNC_INTERVAL_MINUTES=60

# ============================================================================
# Nova Act CRM API Settings (only needed if CRM_ENABLED=true)
# ============================================================================
NOVA_ACT_API_KEY=your-nova-act-api-key
NOVA_ACT_API_URL=https://api.dealersocket.com/v1
NOVA_ACT_USERNAME=your-username  # Optional: if API requires username/password auth
NOVA_ACT_PASSWORD=your-password  # Optional: if API requires username/password auth
NOVA_ACT_CLIENT_ID=  # Optional: client ID if required

